<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_main">

    <fragment
        android:id="@+id/navigation_main"
        android:name="com.example.githubusers.ui.main.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_navigation_main_to_navigation_local"
            app:destination="@id/navigation_local" />
    </fragment>

    <fragment
        android:id="@+id/navigation_local"
        android:name="com.example.githubusers.ui.main.LocalFragment"
        android:label="LocalFragment">
        <action
            android:id="@+id/action_navigation_local_to_navigation_main"
            app:destination="@id/navigation_main" />
    </fragment>
</navigation>